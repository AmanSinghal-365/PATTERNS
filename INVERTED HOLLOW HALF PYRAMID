#include<iostream>
using namespace std;
int main()
{
    int a;
    cin>>a;
    for(int r=0;r<a;r++)
    {
        if(r==0||r==a-1)
        {
            for(int c=0;c<a-r;c++)
            {
                cout<<"* ";
            }
        }
        else
        {
        for(int c=0;c<a-r;c++)
        {
            if(c==0||c==a-r-1)
            {
                cout<<"* ";
            }
            else
            {
                cout<<"  ";
            }
        }
        }
        cout<<endl;
    }
}
