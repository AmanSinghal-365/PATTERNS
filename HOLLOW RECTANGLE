#include <iostream>
using namespace std;
int main()
{
    int a;
    int b;
    cin>>a>>b;
    for(int r=0;r<a;r++)
    {
        if(r==0 || r==a-1)
        {
        for(int c=0;c<b;c++)
        {
            cout<<"* ";
        }
        }
        else
        {
            for(int c=0;c<b;c++)
            {
                if(c==0 || c==b-1)
                {
                    cout<<"* ";
                }
                else
                {
                    cout<<"  ";
                }
            }
            
        }
        cout<<endl;
    }
}
